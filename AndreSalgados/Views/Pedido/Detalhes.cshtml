@using Application.Core.Entities;
@model Pedido

@{
    ViewData["Title"] = "Detalhes do Pedido";
}

<div class="container-fluid px-4">
    <div class="card mb-4">
        <div class="card-header bg-white">
            <h2 class="mb-0"><i class="fas fa-user me-2"></i>Detalhes do Cliente</h2>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Cliente:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Cliente.Nome)</dd>

                <dt class="col-sm-3">Quantidade Total:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Quantidade)</dd>

                <dt class="col-sm-3">Valor Total:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Valor)</dd>

                <dt class="col-sm-3">Pago:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Pago)</dd>

                <dt class="col-sm-3">Data de Cadastro:</dt>
                <dd class="col-sm-9">@Model.Inclusao.ToString("dd/MM/yyyy HH:mm")</dd>

                <dt class="col-sm-3">Última Atualização:</dt>
                <dd class="col-sm-9">@Model.Alteracao.ToString("dd/MM/yyyy HH:mm")</dd>
            </dl>
        </div>
        <div class="card-footer bg-white">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i> Voltar
            </a>
        </div>
    </div>
</div>
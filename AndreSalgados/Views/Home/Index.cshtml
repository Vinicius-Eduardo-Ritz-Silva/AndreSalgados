@{
    ViewData["Title"] = "Home Page";
}

@section Styles {
    <style>
        .justify-content-center {
            justify-content: center !important;
            margin: 1px;
        }
    </style>
}

<div class="text-center">
    <div class="hero-section mb-5 py-5 bg-light rounded-3">
        <h1 class="display-4 fw-bold mb-4">André Salgados</h1>
        <p class="lead mb-4">
            Sua agenda digital para não precisar mais de papel e nem de calculadora.
        </p>
    </div>

    <div class="row g-4 justify-content-center">
        <div class="col-12 col-md-5">
            <a class="nav-link" asp-controller="Cliente" asp-action="Index">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <div class="icon-container mb-3">
                            <i class="fas fa-users fa-3x text-primary"></i>
                        </div>
                        <h3 class="card-title h5">Clientes</h3>
                        <p class="card-text">Cadastre seus compradores mais fiéis</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-12 col-md-5">
            <a class="nav-link" asp-controller="Produto" asp-action="Index">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <div class="icon-container mb-3">
                            <i class="fas fa-cheese fa-3x text-primary"></i>
                        </div>
                        <h3 class="card-title h5">Produtos</h3>
                        <p class="card-text">Cadastre seus deliciosos salgados e doces</p>
                    </div>
                </div>
            </a>
        </div>
    </div>
    <div class="row g-4 justify-content-center">
        <div class="col-12 col-md-5">
            <a class="nav-link" asp-controller="Pedido" asp-action="Index">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <div class="icon-container mb-3">
                            <i class="fas fa-book fa-3x text-primary"></i>
                        </div>
                        <h3 class="card-title h5">Pedidos</h3>
                        <p class="card-text">Registre cada pedido feito no seu dia a dia</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-12 col-md-5">
            <a class="nav-link" asp-controller="Cobranca" asp-action="Index">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <div class="icon-container mb-3">
                            <i class="fas fa-dollar-sign fa-3x text-primary"></i>
                        </div>
                        <h3 class="card-title h5">Cobranças</h3>
                        <p class="card-text">Visualize tudo o que estão te devendo</p>
                    </div>
                </div>
            </a>
        </div>
    </div>
    <div class="row g-4 justify-content-center">
        <div class="col-12 col-md-5">
            <a class="nav-link" asp-controller="Relatorio" asp-action="Index">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <div class="icon-container mb-3">
                            <i class="fas fa-pie-chart fa-3x text-primary"></i>
                        </div>
                        <h3 class="card-title h5">Relatórios</h3>
                        <p class="card-text">Analize seu progresso como vendedor</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-12 col-md-5">
            <a class="nav-link" asp-controller="Home" asp-action="Privacy">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <div class="icon-container mb-3">
                            <i class="fas fa-mobile-alt fa-3x text-primary"></i>
                        </div>
                        <h3 class="card-title h5">Notas</h3>
                        <p class="card-text">Algumas observações do seu genro favorito</p>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>
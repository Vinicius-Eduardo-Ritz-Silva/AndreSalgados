@{
    ViewData["Title"] = "Notas Genro";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h1 class="h3 mb-0">@ViewData["Title"]</h1>
                </div>
                <div class="card-body">
                    <section class="mb-4">
                        <h2 class="h4 text-primary"><i class="fas fa-info-circle me-2"></i>Information Collection</h2>
                        <p>We collect information when you register on our site or fill out a form.</p>
                    </section>
                    
                    <section class="mb-4">
                        <h2 class="h4 text-primary"><i class="fas fa-chart-pie me-2"></i>Information Use</h2>
                        <p>Any of the information we collect may be used to personalize your experience.</p>
                    </section>
                    
                    <section>
                        <h2 class="h4 text-primary"><i class="fas fa-lock me-2"></i>Data Protection</h2>
                        <p>We implement security measures to maintain your personal information safety.</p>
                    </section>
                </div>
                <div class="card-footer text-muted small">
                    Última Atualização: @DateTime.Now.ToString("MMMM dd, yyyy")
                </div>
            </div>
        </div>
    </div>
</div>